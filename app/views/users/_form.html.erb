<%= form_for @user, html: {multipart: true} do |f| %>

  <div class="form-group mb-3">
    <%= f.label :name, class: "col-form-label mb-1 fw-bold" %>
    <%= f.text_field :name, class: 'form-control', placeholder: t('placeholder.name') %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :email, class: "col-form-label mb-1 fw-bold" %>
    <%= f.text_field :email, class: 'form-control', placeholder: t('placeholder.email') %>
  </div>

  <div class="form-group mb-3">
  <%= f.label :avatar, class: "col-form-label mb-1 fw-bold" %>
  <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
  <%= f.file_field :avatar %>
</div>

  <div class="actions mb-3">
    <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
    <%= t('text.or') %>
    <%= link_to t('buttons.return'), :back %>
  </div>
<% end %>
