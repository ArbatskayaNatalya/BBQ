<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <h2 class="mt-3"><%= t('buttons.sign_up') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render partial: 'devise/shared/error_messages', resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, class: "col-form-label mb-1 fw-bold" %>
          <%= f.email_field :email,  autocomplete: "email", class: "form-control", placeholder: t('placeholder.email') %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :name, class: "col-form-label mb-1 fw-bold" %>
          <%= f.text_field :name, class: "form-control", placeholder: t('placeholder.name') %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: "col-form-label mb-1 fw-bold" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t('placeholder.password') %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, class: "col-form-label mb-1 fw-bold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('placeholder.password_confirmation') %>
        </div>

        <div class="actions">
          <%= f.submit t('buttons.sign_up'), class: "btn btn-primary mt-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
