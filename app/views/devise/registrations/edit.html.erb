<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <h2 class="mt-3"><%= t('titles.edit_user') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, class: "col-form-label mb-1 fw-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('placeholder.email') %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group mb-3">
          <%= f.label :password, class: "col-form-label mb-1 fw-bold" %> <i>(<%= t('placeholder.password_change') %>)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t('placeholder.password') %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, class: "col-form-label mb-1 fw-bold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('placeholder.password_confirmation') %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :current_password, class: "col-form-label mb-1 fw-bold" %> <i>(<%= t('text.change_password') %>)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: t('placeholder.current_password') %>
        </div>

        <div class="actions">
          <%= f.submit t('buttons.update'), class: "btn btn-primary mb-5" %>
        </div>
      <% end %>

      <h3><%= t('titles.chancel_account') %></h3>

      <%= button_to t('buttons.chancel_account'), registration_path(resource_name), data: { confirm: t('confirm.agree') }, method: :delete, class: 'mb-3' %>

      <%= link_to t('buttons.back'), :back %>
    </div>
  </div>
</div>
