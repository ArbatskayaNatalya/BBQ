<h2 class="text-center">Log in</h2>

<div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "col-form-label p-0 fw-bold"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "col-form-label p-0 fw-bold" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3", placeholder: "Email" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "col-form-label p-0 fw-bold" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" , class: "btn btn-primary mt-3" %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>

</div>
