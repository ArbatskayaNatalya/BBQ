<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <h2 class="mt-3"><%= t('titles.log_in') %></h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-group mb-3">
              <%= f.label :email, class: "col-form-label mb-1 fw-bold"  %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", placeholder: t('placeholder.email') %>
            </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "col-form-label mb-1 fw-bold" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control mb-3", placeholder: t('placeholder.password') %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "col-form-label mb-1 fw-bold" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit t('buttons.log_in') , class: "btn btn-primary mt-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
