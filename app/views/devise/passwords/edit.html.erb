<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <h2 class="mt-3"><%= t('titles.change_your_password') %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group mb-3">
          <%= f.label :password, class: "col-form-label mb-1 fw-bold" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, class: "col-form-label mb-1 fw-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit t('buttons.change_my_password'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
