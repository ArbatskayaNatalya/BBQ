<h2 class="mt-5 mb-3"><%= t('titles.forgot_password') %>?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('placeholder.password') %>
  </div>

  <div class="actions">
    <%= f.submit t('text.reset_password'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
