<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <h2 class="mt-3"><%= t('titles.forgot_password') %>?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, class: "col-form-label mb-1 fw-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('placeholder.password') %>
        </div>

        <div class="actions">
          <%= f.submit t('text.reset_password'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
