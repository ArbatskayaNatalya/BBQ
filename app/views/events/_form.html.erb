<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group mb-3">
    <%= f.label :title, class: "col-form-label mb-1 fw-bold" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :address, class: "col-form-label mb-1 fw-bold" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

    <div class="form-group mb-3">
    <%= f.label :datetime, class: "col-form-label mb-1 fw-bold" %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: "col-form-label mb-1 fw-bold" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
  <%= f.label :pincode, class: "col-form-label mb-1 fw-bold" %>
  <%= f.text_field :pincode, class: 'form-control' %>
</div>

  <div class="actions mb-3">
    <%= f.submit t('buttons.save'), class: 'btn btn-primary' %>
    <%= t('text.or') %>
    <%= link_to t('buttons.return'), :back %>
  </div>
<% end %>
