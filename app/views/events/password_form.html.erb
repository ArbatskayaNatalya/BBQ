<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <h1 class="mt-3"><%= t('titles.pincode') %></h1>

      <%= form_tag('', method: 'post') do |f| %>
        <div class="form-group mb-3">
          <%= label 'Пин-код', :pincode, class: "col-form-label mb-1 fw-bold" %>
          <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
        </div>

        <div class="actions, mb-5">
          <%= submit_tag %>
        </div>
      <% end %>

      <%= link_to 'На главную', events_path %>
    </div>
  </div>
</div>
