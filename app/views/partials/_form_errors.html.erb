<% errors = model.errors %>

<% if errors.any? %>
<div class="container alert alert-danger">
  <div class="row">
    <div class="col-11">
      <h4> <%= t("errors.messages.not_saved", count: errors.count) %> </h4>
    </div>
    <div class="col-1">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <div class="row">
    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
